<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/rectangle">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />




    <TextView
        app:layout_goneMarginTop="64dp"
        android:fontFamily="@font/satisfy_regular"
        android:textSize="32dp"

        android:layout_marginTop="8dp"
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:gravity="center"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline2"

        android:textStyle="bold"
        android:textColor="#FAF2EEEE"/>

    <EditText

        android:textColorHint="#8A6E58"
        android:inputType="textEmailAddress"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_baseline_email_24"
        android:id="@+id/emailTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/custom_editext"
        android:hint="Enter your email ..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:textColor="#8A6E58"/>

    <EditText
        android:textColorHint="#8A6E58"
        android:inputType="textPassword"
        android:id="@+id/passwordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_editext"
        android:drawableTop="@drawable/ic_baseline_lock_24"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:textColor="#8A6E58"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:hint="Enter your password ..."
        app:layout_constraintTop_toBottomOf="@id/emailTV"
        tools:layout_editor_absoluteX="26dp" />



    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textColor="#FAFAFA"
        android:text="Login"
        android:textSize="18dp"
        android:background="@drawable/button_custtom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordET"
        />

</androidx.constraintlayout.widget.ConstraintLayout>